{
    // Use IntelliSense to learn about possible attributes.
    // Hover to view descriptions of existing attributes.
    // For more information, visit: https://go.microsoft.com/fwlink/?linkid=830387
    "version": "0.2.0",
     "compounds": [
        {
            "name": "Front-end",
            "configurations": ["Launch BFF API", "Launch ServiceHub Service Functions",
             "Run Service Hub Vite", "Run yarn dev",
             "Launch Chrome", "Attach to Chrome"],
            "stopAll": true
        }
    ],
    "configurations": [
        {
            "command": "yarn dev",
            "name": "Run yarn dev",
            "request": "launch",
            "type": "node-terminal",
            "cwd": "${workspaceFolder}/../msp_fes"
        },
        {
            "name": "Launch Chrome",
            "request": "launch",
            "type": "chrome",
            "url": "http://localhost:3000",
            "webRoot": "${workspaceFolder}/../msp_fes/src/ui",
            "runtimeArgs": [
                "--remote-debugging-port=9222"
            ],
            "sourceMaps": true
        },
        {
            "name": "Attach to Chrome",
            "port": 9222,
            "request": "attach",
            "type": "chrome",
            "webRoot": "${workspaceFolder}/../msp_fes/dist"
        },
        
        {
            "type": "node",
            "request": "launch",
            "name": "Launch BFF API",
            "skipFiles": [
                "<node_internals>/**"
            ],
            "program": "${workspaceFolder}/../msp_fes/distApi/server.js",
            "preLaunchTask": "build bff",
            "outFiles": ["${workspaceFolder}/../msp_fes/distApi/**/*.js"]
        },
        {
            "command": "yarn dev",
            "name": "Run Service Hub Vite",
            "request": "launch",
            "type": "node-terminal",
            "cwd": "${workspaceFolder}/../msp_servicehub"
        },
        {
            "type": "node",
            "request": "launch",
            "name": "Launch ServiceHub Service Functions",
            "skipFiles": [
                "<node_internals>/**"
            ],
            "program": "${workspaceFolder}/../msp_servicehub/distApi/server.js",
            "preLaunchTask": "build servicehub",
            "outFiles": ["${workspaceFolder}/../msp_servicehub/distApi/**/*.js"]
        }
    ]
}